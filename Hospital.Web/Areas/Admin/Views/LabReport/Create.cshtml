@model Hospital.ViewModel.LabReportViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>LabReportViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="selectLabReportCategory" class="form-label">Medecine Category</label>
                <select asp-for="LabReportCategoryId" id="selectLabReportCategory" class="form-select"
                        asp-items="@(new SelectList(Model.AllLabReportCategory,"Id", "Name"))">
                    <option value="" selected disabled>---Select LabReport Category---</option>
                </select>

            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

