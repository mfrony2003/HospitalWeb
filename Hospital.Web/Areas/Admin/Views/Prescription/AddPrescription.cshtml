@model Hospital.Models.Prescription

@{
    ViewData["Title"] = "AddPrescription";
}

<h1>AddPrescription</h1>

<h4>Prescription</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="" method="post" asp-action="AddPrescription">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                
                <textarea asp-for="Description" class="form-control" cols="35" row="3" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

